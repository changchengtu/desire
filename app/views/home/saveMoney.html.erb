  <%= form_tag home_save_path, :method=>:post  do %>

        <%= label :state, :toWho, '存給誰'%>
        <%= select :state, :toWho, @person%>

        <%= label :state, :howMuch, '多少錢'%>
        <%= text_field :state, :howMuch, :value=>0%>

        <%= hidden_field :state, :forWhat, :value=>@id%>
        <%= hidden_field :state, :confirm, :value=>false%>
        <%= hidden_field :state, :user_id, :value=>current_user.id%>

        <%= submit_tag '確定送出'%>
  <% end%>

